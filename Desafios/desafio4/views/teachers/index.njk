{% extends 'layout.njk' %}


{% block content %}

<div class="card table-container">
    <table>
        <thead>
            <tr>
                <th>Instrutor</th>
                <th>Atendimento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                        <span style="background: url({{teacher.avatar_url}})"></span>
                        {{teacher.name}}
                    </td>
                <td>{{teacher.area}}</td>
                <td><a href="/teachers/{{teacher.id}}">ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}