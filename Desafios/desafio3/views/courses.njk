{% extends "layout.njk"%}}

{%block head%}
    <Title>Conte√∫do</Title>
        
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">

{% endblock %}

{%block content%}}
<section class="cards">
    {% for post in data.posts %}
    <div id="{{post.id}}" class="card" >
        <div class="card__image-container">
            <img src="{{post.image_url}}" alt="">
        </div>
        <div class="card__info">
            <div class="head">
                <p class="card-title">{{post.title}}</p>
                <p class="card-author">{{post.author}}</p>
            </div>
            <p class="card-time"><span>{{post.duration}} min</span></p>
        </div>
    </div>
    {% endfor %}

</section>

<div class="modal-overlay">
    <div class="modal">
        <div class="icons">
            <span class="material-icons fullscreen">fullscreen</span>
            <span class="material-icons close-button">close</span>
        </div>
        <iframe frameborder="0" scrolling="hidden"></iframe>
    </div>
</div>

<script src="scripts.js"></script>
{%endblock%}