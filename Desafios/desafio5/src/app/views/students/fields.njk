<div class="item">
    <div>Avatar URL</div>
    <input type="url" name="avatar_url" placeholder="Link da foto" value="{{student.avatar_url}}">
</div>

<div class="item">
    <div>Nome</div>
    <input type="text" name="name" placeholder="Nome" value="{{student.name}}">
</div>

<div class="item">
    <div>Email</div>
    <input type="text" name="email" value="{{student.email}}">
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <input type="date" name="birth" value={{student.birth}}>
</div>

<div class="item">
    <div>Ano escolar</div>
    <select name="grade">
        <option value="5EF" {% if student.grade == '5EF'%} selected {% endif %}>5º Ano do Ensino Fundamental</option> 
        <option value="6EF" {% if student.grade == '6EF'%} selected {% endif %}>6º Ano do Ensino Fundamental</option> 
        <option value="7EF" {% if student.grade == '7EF'%} selected {% endif %}>7º Ano do Ensino Fundamental</option> 
        <option value="8EF" {% if student.grade == '8EF'%} selected {% endif %}>8º Ano do Ensino Fundamental</option> 
        <option value="9EF" {% if student.grade == '9EF'%} selected {% endif %}>9º Ano do Ensino Fundamental</option> 
        <option value="1EM" {% if student.grade == '1EM'%} selected {% endif %}>1º Ano do Ensino Médio</option> 
        <option value="2EM" {% if student.grade == '2EM'%} selected {% endif %}>2º Ano do Ensino Médio</option> 
        <option value="3EM" {% if student.grade == '3EM'%} selected {% endif %}>3º Ano do Ensino Médio</option> 
    </select>
</div>


<div class="item">
    <div>Carga horária semanal</div>
    <input type="number" name="class_hours" placeholder="Horas por semana" value="{{student.class_hours}}">
</div>
