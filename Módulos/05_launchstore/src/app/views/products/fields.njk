<div class="item">
    <div>Categoria</div>
    <select name="category_id">
        {% for category in categories %}
            <option value="{{category.id}}" {% if product.category_id == category.id %} selected {% endif %}>{{category.name}}</option>
        {% endfor %}
    </select>
</div>

<div class="item">
    <div>Título</div>
    <input 
        type="text" 
        name="name" 
        placeholder="Digite o Título do Anúncio"
        value="{{product.name}}"
    >
</div>

<div class="item">
    <div>Descrição</div>
    <textarea name="description">
        {{product.description}}
    </textarea>
</div>

{# Campo de Foto #}

<div class="item">
    <div>Valor</div>
    <input 
        type="text" 
        name="price" 
        placeholder="Preço do Produto"
        value="{{product.price}}"
    >
    {% if product.old_price %}
        <input type="hidden" name="old_price" value={{product.old_price}}>
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <input 
        type="number" 
        name="quantity" 
        placeholder="Estoque disponível"
        value="{{product.quantity}}"
    >
</div>

{% if product.status %}
<div class="item">
    <div>Disponível?</div>
    <span>
        <input 
            type="radio" 
            name="status" 
            value="1" 
            {% if product.status == "1" %} checked {% endif %}
            >
            Sim
    </span>
    <span>
        <input 
            type="radio" 
            name="status" 
            value="0"
            {% if product.status == "0" %} checked {% endif %}
        >
        Não
    </span>
</div>
{% endif %}